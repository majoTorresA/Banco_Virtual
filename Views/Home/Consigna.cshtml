@model Banco.ViewModels.ConsignaViewModel

@{
    ViewData["Title"] = "Consignar Dinero";
}

<h2>Consignar Dinero</h2>

@if (ViewData["MensajeFallo"] != null)
{
    <div class="alert alert-danger">
        @ViewData["MensajeFallo"]
    </div>
}

@if (ViewData["MensajeExito"] != null)
{
    <div class="alert alert-success" role="alert">
        @ViewData["MensajeExito"]
    </div>
    <div class="alert alert-success">
        <p>Su saldo actual es: @ViewData["Saldo"]</p>
    </div>
}

<form asp-action="Consigna" method="post">
    <div class="form-group">
        <label for="correoDestinatario">Correo del Destinatario</label>
        <input type="email" class="form-control" id="correoDestinatario" name="correoDestinatario" required>
    </div>
    <div class="form-group">
        <label for="cantidad">Cantidad</label>
        <input type="number" class="form-control" id="cantidad" name="cantidad" required min="0.01" step="0.01">
    </div>
    <button type="submit" class="btn btn-primary">Consignar</button>
</form>

