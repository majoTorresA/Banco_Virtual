@model Banco.ViewModels.ConsignaViewModel

@{
    ViewData["Title"] = "Consignar Dinero";
}


<html>

    <head>
   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>

        <body>
            <div class="row mt-5 justify-content-center align-items-center ">
                <div class="col-sm-4">
                <h2>Consigna</h2>
                    <div class="card">

                        <div class="card-body">

                            <form asp-controller="Home" asp-action="Consigna" method="post">
                                <div class="form-group">
                                    <label for="correoDestinatario">Correo del Destinatario</label>
                                    <input type="email" class="form-control" id="correoDestinatario" name="correoDestinatario" required>
                                </div>
                                <div class="form-group">
                                    <label for="cantidad">Cantidad</label>
                                    <input type="number" class="form-control" id="cantidad" name="cantidad" required min="0.01" step="0.01">
                                </div>

                                <div class="d-grid gap-4 mb-3">
                                    <button class="btn btn-primary" type="submit">Consignar</button>
                                </div>
                  
                                @if (ViewData["MensajeFallo"] != null)
                                {
                                    <div class="alert alert-danger">
                                        @ViewData["MensajeFallo"]
                                    </div>
                                }

                                @if (ViewData["MensajeExito"] != null)
                                {
                                    <div class="alert alert-success" role="alert">
                                        @ViewData["MensajeExito"]
                                    </div>
                                    <div class="alert alert-success">
                                        <p>Su saldo actual es: @ViewData["Saldo"]</p>
                                    </div>
                                }

                            </form>

                        </div>

                    </div>

                </div>

            </div>

        </body>
<</html>