

<html>
    <head>
    <title>Retira Tu Plata</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>

    <body>
    <div class="row mt-5 justify-content-center">
        <div class="col-sm-4">
            <h2>Retira tu plata :)</h2>
            <div class="card">
                <div class="card-body">

                <form asp-controller="Home" asp-action="Retiro" method="post">
                    <div class="form-group">
                        <label for="clave">Clave</label>
                        <input type="password" class="form-control" id="clave" name="clave" required />
                    </div>
                    <div class="form-group">
                        <label for="cantidad">Cantidad</label>
                        <input type="number" class="form-control" id="cantidad" name="cantidad" step="0.01" required />
                    </div>


                    <div class="d-grid gap-5 mb-3">
                        <button class="btn btn-primary" type="submit">Retirar</button>
                    </div>


                    @if (ViewData["MensajeFallo"] != null)
                    {
                        <div class="alert alert-danger" role= "alert">
                            @ViewData["MensajeFallo"]
                        </div>
                    }
                    @if (ViewData["MensajeExito"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewData["MensajeExito"]
                        </div>
                        <div class="alert alert-success">
                            <p>Su saldo actual es: @ViewData["Saldo"]</p>
                        </div>
                    }
                </form>

                </div>

            </div>

        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>




