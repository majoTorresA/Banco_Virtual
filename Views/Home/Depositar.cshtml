
<html>
<head>
    <title>Deposita en tu Cuenta</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <div class="row mt-5 justify-content-center">
        <div class="col-sm-4">
            <h2 class="text-center">Deposita tu plata :)</h2>
            <div class="card">

            <div class="card-body">

                <form asp-controller="Home" asp-action="Depositar" method="post">
                        <div class="form-group  mb-3">
                        <label for="clave">Clave</label>
                        <input type="password" class="form-control" id="clave" name="clave" required />
                    </div>
                        <div class="form-group  mb-3">
                        <label for="cantidad">Cantidad</label>
                        <input type="number" class="form-control" id="cantidad" name="cantidad" step="0.01" required />
                    </div>


                    <div class="d-grid gap-4 mb-3">
                            <button class="btn text-white" type="submit">Depositar</button>
                    </div>


                        @if (ViewData["Error"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                                @ViewData["Error"]
                        </div>
                    }
                    @if (ViewData["Exito"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewData["Exito"]
                        </div>
                        <div class="alert alert-success">
                            <p>Su saldo actual es: @ViewData["VerSaldo"]</p>
                        </div>
                    }

                </form>
            </div>

            </div>

        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
